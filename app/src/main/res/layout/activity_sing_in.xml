<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sign_in"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:gravity="center"> <!-- Center the whole content vertically and horizontally -->

    <!-- Logo Image -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:contentDescription="Logo"
        android:src="@drawable/splash_logo" />

    <!-- Username Field -->
    <EditText
        android:id="@+id/username"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_input"
        android:hint="Username"
        android:inputType="text"
        android:padding="12dp"
        android:layout_gravity="center_horizontal" /> <!-- Center the EditText horizontally -->

    <!-- Password Field -->
    <EditText
        android:id="@+id/password"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_input"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:layout_gravity="center_horizontal" /> <!-- Center the EditText horizontally -->

    <!-- Confirm Password Field -->
    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_input"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:layout_gravity="center_horizontal" /> <!-- Center the EditText horizontally -->

    <!-- Email Field -->
    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_input"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:layout_gravity="center_horizontal" /> <!-- Center the EditText horizontally -->

    <!-- Sign In Button -->
    <Button
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#120A4C"
        android:padding="12dp"
        android:text="Sign In"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_gravity="center" /> <!-- Center the Button horizontally -->

    <!-- "Have an account? Log In" Link -->
    <TextView
        android:id="@+id/have_account_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have an account? Log In"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:focusable="true" /> <!-- Center the TextView horizontally -->

</LinearLayout>
